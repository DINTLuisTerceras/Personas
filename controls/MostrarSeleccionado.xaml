<UserControl x:Class="Personas.controls.MostrarSeleccionado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DockPanel Margin="5">
            <TextBlock Margin="0,0,5,0">Nombre: </TextBlock>
            <TextBox Text="{Binding Path=Nombre}" IsReadOnly="True"></TextBox>
        </DockPanel>
        <DockPanel Margin="5">
            <TextBlock Margin="0,0,5,0">Edad: </TextBlock>
            <TextBox Text="{Binding Path=Edad}" IsReadOnly="True"></TextBox>
        </DockPanel>
        <DockPanel Margin="5">
            <TextBlock Margin="0,0,5,0">Pais: </TextBlock>
            <TextBox Text="{Binding Path=Pais}" IsReadOnly="True"></TextBox>
        </DockPanel>
    </StackPanel>
</UserControl>
